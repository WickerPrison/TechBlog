
<div class="post-container">
    <div class="post-header">
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.username}} on {{post.date}}</p>
    </div>
    <p>{{post.content}}</p>
</div>
{{#each comments as |comment|}}
<div class="post-container">
    <p>{{comment.username}} - {{comment.date}}</p>
    <p>{{comment.content}}</p>
</div>
{{/each}}