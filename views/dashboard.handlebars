{{#each posts as |post|}}
    <div class="post-container">
        <a class="post-link" href="/posts/{{post.id}}">
            <div class="post-header">
                <h2>{{post.title}}</h2>
                <p>Posted by {{post.username}} on {{post.date}}</p>
            </div>
        </a>
        <div class="input-holder">
            <p class="post-content">{{post.content}}</p>
            <button data-postid="{{post.id}}" class="comment-button update-button">Update</button>
            <button data-postid="{{post.id}}" class="comment-button delete-button">Delete</button>
        </div>
    </div>
{{/each}}

<button id="new-post-button" class="comment-button">+ New Post</button>

<div class="post-container" id="new-post">
    <div class="post-header input-holder">
        <h2>Title: </h2>
        <textarea id="title-text"></textarea>
        <button id="submit-post" class="post-button">Submit</button>
    </div>
    <div class="input-holder">
        <p>Content:</p>
        <textarea id="content-text"></textarea>
    </div>
</div>

<div class="post-container" id="update-post">
    <div class="post-header input-holder">
        <h2>Title: </h2>
        <textarea id="update-title-text"></textarea>
        <button id="submit-update" class="post-button">Update</button>
    </div>
    <div class="input-holder">
        <p>Content:</p>
        <textarea id="update-content-text"></textarea>
    </div>
</div>

<script src="/js/post.js"></script>
<script src="/js/updateDelete.js"></script>